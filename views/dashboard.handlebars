
<div class="row">
    <div class="col-md-6">
        <h3>Create Post</h3>
        <form action="/api/post/" method="POST" class="my-form">
            <div>
                <label for="title">Title:</label>
                <input type="text" id="title" name="title" required>
            </div><br>

            <div>
                <label for="body">Body:</label>
                <textarea id="body" name="body" rows="10" cols="50" required></textarea>
            </div><br>
            <input type="hidden" name="user_id" value="{{user.id}}">

            <div>
                <button class="btn btn-primary" type="submit">Create Post</button>
            </div><br>


        </form>

    </div>
    <div class="col-md-6 pt-5">
        <h3>Recent Posts</h3>
        {{#each posts}}
            <div class="card mt-3">
                <h3>{{this.title}}</h3>
                <p>{{this.body}}</p>
                <p>By {{this.user.username}}</p>

                <div class="d-flex justify-content-end align-items-end">
                    <div>
                    <a href="/post/edit/{{this.id}}" style="width: 80px; max-width: none;" class="btn btn-warning">Edit</a>
                    </div>
                    <div>
                    <form action="/api/post/delete/{{this.id}}">
                        <input type="submit" value="Delete" class="btn btn-danger">
                    </form>
                    </div>
                </div>

            </div>
        {{/each}}
    </div>

</div>